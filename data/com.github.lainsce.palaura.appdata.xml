    <id>com.github.lainsce.palaura.desktop</id>
    <metadata_license>CC0</metadata_license>
    <project_license>GPL-3.0+</project_license>
    <name>Palaura</name>
    <summary>Find any word's definition with this handy dictionary</summary>
    <description>
        <p>Find any word's definition, and details about it, with this handy dictionary by your side</p>
        <ul>
            <li>Quit anytime with the shortcut Ctrl + Q</li>
        </ul>
    </description>
    <provides>
        <binary>com.github.lainsce.palaura</binary>
    </provides>
    <developer_name>Lains</developer_name>
    <url type="homepage">https://github.com/lainsce/palaura/</url>
    <url type="bugtracker">https://github.com/lainsce/palaura/issues</url>
